public class InnerClass {
        public int a=10;
        void display()
        {
        class Inner
        {
        	void show()
        	{
        		System.out.println("value of A is= "+a);
        	}
        }
        Inner in = new Inner();
        in.show();
        }
	public static void main(String[] args) {
		InnerClass obj = new InnerClass();
		obj.display();
	}

}
